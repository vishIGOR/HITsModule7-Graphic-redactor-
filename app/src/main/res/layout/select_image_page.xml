<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/select_image_page">

    <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@drawable/select_image_rectangle"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_photo"
            android:textAppearance="@style/select_photo"
            android:gravity="top"
            android:layout_alignBottom="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_gallery"
            android:background="@drawable/gallery_and_camera_button"
            android:id="@+id/imageFromGalleryButton"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rectangle_1"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.62"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_camera"
            android:background="@drawable/gallery_and_camera_button"
            android:id="@+id/imageButton2" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.672"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/return_button_for_second_page"
            app:srcCompat="@drawable/ic_return_for_second_page"
            android:id="@+id/imageButton3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="returnToStartPage"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.917"/>
</androidx.constraintlayout.widget.ConstraintLayout>