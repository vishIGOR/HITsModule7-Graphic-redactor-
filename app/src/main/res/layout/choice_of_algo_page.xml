<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/choice_of_algo_page">
    <View
            android:id="@+id/topOfTheAlgorithmSelectionPage"
            android:layout_width="411dp"
            android:layout_height="102dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/select_image_rectangle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <View
            android:id="@+id/topOfImageSelectionPage"
            android:layout_width="418dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_for_third_page"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cancel"
            android:id="@+id/returnToSecondPageButton"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintTop_toTopOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.059"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_ok"
            android:id="@+id/endWorkingWithImageButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintStart_toStartOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.903"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_redo"
            android:background="@android:color/transparent"
            android:id="@+id/redoChanges"
            app:layout_constraintEnd_toStartOf="@+id/endWorkingWithImageButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintStart_toEndOf="@+id/undoChanges" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_undo"
            android:id="@+id/undoChanges"
            app:layout_constraintStart_toEndOf="@+id/returnToSecondPageButton"
            app:layout_constraintBottom_toBottomOf="@+id/topOfTheAlgorithmSelectionPage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/endWorkingWithImageButton"
            app:layout_constraintHorizontal_bias="0.534"/>
    <ImageView
            android:layout_width="369dp"
            android:layout_height="441dp"
            app:srcCompat="@android:drawable/screen_background_light_transparent"
            android:id="@+id/placeForImageSelectionPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fieldForSaveAndShareButtons"
            app:layout_constraintTop_toBottomOf="@+id/topOfTheAlgorithmSelectionPage" android:layout_marginTop="40dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="410dp"
            android:id="@+id/buttons"
            android:orientation="horizontal"
            android:layout_height="112dp"
            app:layout_constraintTop_toTopOf="@+id/topOfImageSelectionPage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/topOfImageSelectionPage"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_cube" android:id="@+id/cubeButton"
            tools:layout_editor_absoluteY="636dp" tools:layout_editor_absoluteX="21dp"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_filters" android:id="@+id/filtersButton"
            tools:layout_editor_absoluteY="636dp" tools:layout_editor_absoluteX="224dp"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mask" android:id="@+id/maskingButton"
            tools:layout_editor_absoluteY="636dp" tools:layout_editor_absoluteX="317dp"/>
    <ImageButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rotation"
            android:id="@+id/imageRotationButton" tools:layout_editor_absoluteY="636dp"
            tools:layout_editor_absoluteX="127dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>