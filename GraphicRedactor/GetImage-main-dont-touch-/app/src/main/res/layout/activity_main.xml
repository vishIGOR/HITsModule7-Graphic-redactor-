<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">

    <!--Button to open the image selector-->
    <Button
            android:id="@+id/bSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="SELECT IMAGE"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    <!--ImageView to preview the selected image-->
    <ImageView
            android:id="@+id/iVPreviewImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/bSelectImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription"/>

    <Button
            android:id="@+id/bStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:text="rotate"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/angle" />

    <Button
            android:id="@+id/bStartMasking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:text="unsharp masking"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/bStart" />

    <Button
            android:id="@+id/bNextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:text="next page"
            android:onClick="secondPage"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/bStartMasking" />

    <Button
            android:id="@+id/bCube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            android:text="Cube"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/bNextPage" />

    <EditText
            android:id="@+id/angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="numberSigned"
            android:ems="8"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/iVPreviewImage" />



</RelativeLayout>